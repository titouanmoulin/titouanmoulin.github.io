---
const d = new Date();
let hour = d.getHours();
let hours;
if (hour < 10) {
    hours = "0" + hour;
} else {
    hours = hour;
}
let minute = d.getMinutes();
let minutes;
if (minute < 10) {
    minutes = "0" + minute;
} else {
    minutes = minute;
}
const time = hours + ":" + minutes;
